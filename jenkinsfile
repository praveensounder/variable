pipeline {
    agent any

    stages {
       stage('Terraform Plan') {
           steps  if (buildStatus == 'snsPublish')  {
        
           snsPublish(

                topicArn: 'arn:aws:sns:us-west-2:860556710136:testsns',

                subject: 'Build plan!',

                message: env.BUILD_URL

            )

    bat 'terraform init'
    bat 'terraform plan'
  }
  else {
    snsPublish(

                topicArn: 'arn:aws:sns:us-west-2:860556710136:testsns',

                subject: 'Build plan fail!',

                message: env.BUILD_URL

            )
  }
  }
       }

  stage ('Terraform Apply') {
      steps  if (buildStatus == 'snsPublish')  {
        
    bat 'terraform apply -auto-approve'
      snsPublish(

                topicArn: 'arn:aws:sns:us-west-2:860556710136:testsns',

                subject: 'Build deploy!',

                message: env.BUILD_URL

            )
            }
             else {
    snsPublish(

                topicArn: 'arn:aws:sns:us-west-2:860556710136:testsns',

                subject: 'Build plan fail!',

                message: env.BUILD_URL

            )
  }
  }
  }
  
   stage ('success'){
            steps  if (buildStatus == 'snsPublish'){
                script {
                    currentBuild.result = 'SUCCESS'
                    
                }
                  snsPublish(

                topicArn: 'arn:aws:sns:us-west-2:860556710136:testsns',

                subject: 'Build Success!',

                message: env.BUILD_URL

            )
            }
              else {
    snsPublish(

                topicArn: 'arn:aws:sns:us-west-2:860556710136:testsns',

                subject: 'Build plan fail!',

                message: env.BUILD_URL

            )
  }
        }
        }
 
}
