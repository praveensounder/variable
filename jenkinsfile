pipeline {
    agent any

    stages {
       stage('Terraform Plan') {
           steps {
    bat 'terraform init'
    bat 'terraform plan'
  }
       }

  stage ('Terraform Apply') {
      steps {
    bat 'terraform apply -auto-approve'
  }
  }
   stage ('success'){
            steps {
                script {
                    currentBuild.result = 'SUCCESS'
                }
            }
        }
        }
  post {

        failure {

            snsPublish(

                topicArn: 'arn:aws:sns:us-east-1:860556710136:jenkinsBuild',

                subject: 'Build failed!',

                message: env.BUILD_URL,

            )

        }
}
